<p id="notice"><%= notice %></p>
<% @posts.each do |post| %>
  <div class="card">
    <svg class="bd-placeholder-img card-img-top" width="100%" height="180" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Image cap"><title>Placeholder</title><rect width="100%" height="100%" fill="#868e96"></rect><text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text></svg>
    <div class="card-body">
      <h5 class="card-title"><%= post.title %></h5>
      <p class="card-text"><%= post.author_id %></p>
      <p class="card-text"><small class="text-muted"><%= post.updated_at %></small></p>
      <%= link_to 'Read more', post, class: "card-link" %>
      <% if logged_in? %>
        <% if current_user.id == post.author_id %>
          <%= link_to 'Edit', edit_post_path(post), class: "card-link" %>
          <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "card-link" %>
        <% end %>
      <% end %>
    </div>
  </div>
  <br/>
<% end %>
