<p class="notice"><%= notice %></p>

<h2>
  <%= @post.title %> by <%= @post.author.username %>
</h2>
<br/>

<%= @post.content %>
<br/>

<% if logged_in? %>
  <h3>Post a comment</h3>
  <%= render 'comments/form', comment: @comment, post_id: @post.id %>
<% end %>

<h3>Comments</h3>
<% @post.comments.each do |comment| %>
  <div class="">
    <div class="">
      <h5 class=""><%= comment.user.username %></h5>
      <p class=""><%= comment.comment %></p>
      <p class=""><small class=""><%= comment.updated_at %></small></p>
      <% if logged_in? %>
        <% if current_user.id == comment.user_id %>
          <%= link_to 'Edit', edit_comment_path(comment), class: "" %>
          <%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure you want to delete this comment?' }, class: "" %>
        <% end %>
      <% end %>
    </div>
  </div>
  <br/>
<% end %>

<% if logged_in? %>
  <% if current_user.id == @post.author_id %>
    <%= link_to 'Edit', edit_post_path(@post) %> |
  <% end %>
<% end %>
<%= link_to 'Back to all blogs', posts_path %>
