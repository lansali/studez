<div class="bg-gray-200 py-8">
  <%= form_with(model: user, class: "bg-white shadow py-12 px-12 text-center w-1/3 mx-auto", local: true) do |form| %>
    <% if user.errors.any? %>
      <div class="">
        <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
          <% user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <h1 class="text-xl font-bold">Sign Up</h1>
    <p class="notice text-blue-500"><%= notice %></p>

    <div class="mb-2">
      <%= form.label :email %>
      <%= form.text_field :email, class: "shadow appearance-none border rounded w-full py-2 px-2 text-gray-700 leading-tight focus:outline-none focus:shadow-outline",  placeholder: 'Email' %>
    </div>

    <div class="flex mb-2">
      <div class="flex-1 pr-2">
        <div class="">
          <%= form.label :password %>
          <%= form.password_field :password, class: "shadow appearance-none border rounded w-full py-2 px-2 text-gray-700 leading-tight focus:outline-none focus:shadow-outline",  placeholder: 'Password' %>
        </div>
      </div>
      
      <div class="flex-1 pl-2">
        <div class="">
          <%= form.label :password_confirmation %>
          <%= form.password_field :password_confirmation, class: "shadow appearance-none border rounded w-full py-2 px-2 text-gray-700 leading-tight focus:outline-none focus:shadow-outline",  placeholder: 'Confirm password' %>
        </div>
      </div>
    </div>

    <div class="flex mb-2">
      <div class="flex-1 pr-2">
        <div class="">
          <%= form.label :first_name %>
          <%= form.text_field :first_name, class: "shadow appearance-none border rounded w-full py-2 px-2 text-gray-700 leading-tight focus:outline-none focus:shadow-outline",  placeholder: 'First name' %>
        </div>
      </div>

      <div class="flex-1 pl-2">
        <div class="">
          <%= form.label :middle_name %>
          <%= form.text_field :middle_name, class: "shadow appearance-none border rounded w-full py-2 px-2 text-gray-700 leading-tight focus:outline-none focus:shadow-outline",  placeholder: 'Middle name' %>
        </div>
      </div>
    </div>

    <div class="flex mb-2">
      <div class="flex-1 pr-2">
        <div class="">
          <%= form.label :last_name %>
          <%= form.text_field :last_name, class: "shadow appearance-none border rounded w-full py-2 px-2 text-gray-700 leading-tight focus:outline-none focus:shadow-outline",  placeholder: 'Last name' %>
        </div>
      </div>

      <div class="flex-1 pl-2">
        <div class="">
          <%= form.label :username %>
          <%= form.text_field :username, class: "shadow appearance-none border rounded w-full py-2 px-2 text-gray-700 leading-tight focus:outline-none focus:shadow-outline",  placeholder: 'Username' %>
        </div>
      </div>
    </div>
    <div class="mb-2">
      <div class="">
        <%= form.label :user_type %>
        <%= form.select :user_type, [['Employer', true], ['Student', false]], {:prompt => "Select User type"}, { :class => '"shadow appearance-none border rounded w-full py-2 px-2 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"' } %>
      </div>
    </div>
    <br/>

    <div class="actions">
      <%= form.submit 'Sign Up', class: "mb-4 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    </div>
  <% end %>
</div>
