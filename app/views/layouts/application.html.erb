<!DOCTYPE html>
<html>
  <head>
    <title>Studez</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="container-fluid">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="#">Studez</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <%= link_to "Home", root_path, class: "nav-link"%>
          </li>
          <li class="nav-item active">
            <%= link_to "Blog", posts_path, class: "nav-link"%>
          </li>
          <% if current_user %>
            <li class="nav-item">
              <%= link_to "| Explore student profiles", users_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "| Post new blog", new_post_path, class: "nav-link" %>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                | Opportunities
              </a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <%= link_to "All opportunities", opportunities_path, class: "dropdown-item" %>
                <%= link_to "Post opportunity", new_opportunity_path, class: "dropdown-item" %>
                <div class="dropdown-divider"></div>
                <%= link_to "Recent opportunities", opportunities_path, class: "dropdown-item" %>
              </div>
            </li>
            <li class="nav-item">
              <%= link_to current_user.first_name, current_user, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Log Out", logout_path, class: "nav-link" %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Sign Up", signup_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Log In", login_path, class: "nav-link" %>
            </li>
          <% end %>
        </ul>
        <form class="form-inline my-2 my-lg-0">
          <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
      </div>
    </nav>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-8 offset-md-2">
        <%= yield %>
      </div>
    </div>
  </div>
  </body>
</html>
