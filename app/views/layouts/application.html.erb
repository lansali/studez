<!DOCTYPE html>
<html>
  <head>
    <title>Studez</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="container-fluid">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="#">Studez</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <%= link_to "Home", root_path, class: "nav-link"%>
          </li>
          <li class="nav-item active">
            <%= link_to "Blog", posts_path, class: "nav-link"%>
          </li>
          <% if current_user %>
            <li class="nav-item">
              <%= link_to "| Students", students_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "| Businesses", businesses_path, class: "nav-link" %>
            </li>
            <% if current_user.moderator == true %>
              <li class="nav-item">
                <%= link_to "| Post new blog", new_post_path, class: "nav-link" %>
              </li>
            <% end %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                | Opportunities
              </a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <%= link_to "All opportunities", opportunities_path, class: "dropdown-item" %>
                <% if current_user.employer == true %>
                  <%= link_to "Post opportunity", new_opportunity_path, class: "dropdown-item" %>
                <% end %>
                <div class="dropdown-divider"></div>
                <%= link_to "Recent opportunities", opportunities_path, class: "dropdown-item" %>
              </div>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                | Notifications
              </a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <% if notifications.present? %>
                  <% if notifications['profile_notifications'].present? %>
                    <a class="dropdown-item" href="#">Profile notifications</a>
                    <div class="dropdown-divider" href="#"></div>
                    <% notifications['profile_notifications'].each do |key, notification| %>
                      <%= link_to notification[0], send(key, notification[1]), class: "dropdown-item" %>
                    <% end %>
                    <div class="dropdown-divider" href="#"></div>
                  <% end %>
                  <% if notifications['business_notifications'].present? %>
                    <a class="dropdown-item" href="#">Business notifications</a>
                    <div class="dropdown-divider" href="#"></div>
                    <% notifications['business_notifications'].each do |key, notification| %>
                      <%= link_to notification, send(key), class: "dropdown-item" %>
                    <% end %>
                    <div class="dropdown-divider" href="#"></div>
                  <% end %>
                <% else %>
                  <a class="dropdown-item" href="#">No messages</a>
                <% end %>
              </div>
            </li>
            <li class="nav-item">
              <%= link_to current_user.first_name, current_user, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Log Out", logout_path, class: "nav-link" %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Sign Up", signup_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Log In", login_path, class: "nav-link" %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-8 offset-md-2">
        <%= yield %>
      </div>
    </div>
  </div>
  <footer class="mastfoot mt-auto">
    <div class="inner">
      <p class="mt-5 mb-3 text-muted">Â© 2019</p>
    </div>
  </footer>
  </body>
</html>
