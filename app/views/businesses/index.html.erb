<p id="notice"><%= notice %></p>
<% @businesses.each do |business| %>
  <div class="card">
    <svg class="bd-placeholder-img card-img-top" width="100%" height="180" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Image cap"><title>Placeholder</title><rect width="100%" height="100%" fill="#868e96"></rect><text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text></svg>
    <div class="card-body">
      <h5 class="card-title"><%= business.location %></h5>
      <p class="card-text"><%= business.logo %></p>
      <p class="card-text"><%= business.description %></p>
      <p class="card-text"><small class="text-muted"><%= business.updated_at %></small></p>
      <%= link_to 'Show', business, class: "card-link" %>
      <% if current_user.id == business.employer_id %>
        <%= link_to 'Edit', edit_business_path(business), class: "card-link" %>
        <%= link_to 'Destroy', business, method: :delete, data: { confirm: 'Are you sure?' }, class: "card-link" %>
      <% end %>
    </div>
  </div>
  <br/>
<% end %>
