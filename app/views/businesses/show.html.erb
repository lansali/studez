<p class="notice text-blue-500"><%= notice %></p>
<div class="bg-gray-200 py-32">
  <div class="flex-col p-12 bg-white shadow rounded mx-auto w-1/2">
    <p class="text-sm text-green-500">
      <%= @business.username %>
    </p>
    <img src="<%= @business.logo %>">
    <p class="text-normal">
      <%= @business.description %>
    </p>
    <p class="text-sm text-green-400">
      <i class="icon-pin"></i> <%= @business.location %>
    </p>
    <div class="mt-6">
      <% if current_user.id == @business.user_id %>
        <%= link_to 'Edit', edit_business_path(@business), class: "text-sm text-center self-center bg-white border-2 border-blue-500 hover:bg-blue-500 text-blue-500 hover:text-white font-bold px-4 py-2 rounded" %>
        <%= link_to 'View listed jobs', opportunity_path(business_id: @business.id), class: "ml-4 text-sm text-center self-center bg-white border-2 border-green-500 hover:bg-green-500 text-green-500 hover:text-white font-bold px-4 py-2 rounded" %>
      <% end %>
      <% if current_employer.present? %>
        <%= link_to 'List an opportunity', new_opportunity_path(business_id: @business.id), class: "ml-4 text-sm text-center self-center bg-white border-2 border-green-500 hover:bg-green-500 text-green-500 hover:text-white font-bold px-4 py-2 rounded" %>
        <%= link_to 'Back to my businesses', businesses_path(target_employer: current_employer.id), class: "ml-4 text-sm text-center self-center bg-white border-2 border-gray-500 hover:bg-gray-500 text-gray-500 hover:text-white font-bold px-4 py-2 rounded" %>
      <% end %>
    </div>
  </div>
</div>
