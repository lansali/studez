<%= form_with(model: submission, class: 'form-sessions', local: true) do |form| %>
  <% if submission.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(submission.errors.count, "error") %> prohibited this submission from being saved:</h2>

      <ul>
        <% submission.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.text_field :opportunity_id, type: 'hidden', value: opportunity_id %>
  <%= form.text_field :student_id, type: 'hidden', value: student_id %>

  <div class="field">
    <%= form.label :cover_letter %>
    <%= form.file_field :cover_letter, direct_upload: true, class: 'form-control', placeholder: 'Upload Cover letter' %>
  </div>

  <div class="field">
    <%= form.label :cv %>
    <%= form.file_field :cv, direct_upload: true, class: 'form-control', placeholder: 'Upload CV' %>
  </div>
  <br/>

  <div class="actions">
    <%= form.submit 'Submit', class: "btn btn-lg btn-success btn-block"%>
  </div>
<% end %>
