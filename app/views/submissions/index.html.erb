<p class="notice text-blue-500"><%= notice %></p>
<div class="bg-gray-100 flex pt-12 pl-40 pr-24">
  <div class="w-3/4 mx-auto">
    <h3 class="tracking-wide mb-4">You have <%= @submissions.count %> Submission<% if @submissions.count != 1 %>s<% end %></h3>
    <% @submissions.each do |submission| %>
      <div class="flex bg-white shadow py-8 px-24 rounded-lg mb-4 border-l-4 border-white hover:border-green-500">
        <p class="flex-auto">
          <%= image_tag "logo.png", width: 120, height: 120 %>
        </p>
        <div class="flex-auto">
          <p class="text-green-600 font-medium">Full Time</p>
          <p class="font-medium"><%= submission.opportunity.name %></p>
          <p class="text-gray-600 text-sm mb-3">Joined on <span class="text-green-400"><%= submission.updated_at %></span></p>
          <p class="text-gray-600 text-sm whitespace-pre">University of Nairobi    4th Year</p>
        </div>
        <div class="flex-auto flex items-center justify-end">
          <%= link_to 'View', submission, class: "bg-white border-2 border-green-500 hover:bg-green-500 text-green-500 hover:text-white font-bold py-2 px-4 rounded" %>
          <% if current_user.id == submission.student.user.id %>
            <%= link_to 'Edit', edit_submission_path(submission), class: "ml-2 bg-white border-2 border-blue-500 hover:bg-blue-500 text-blue-500 hover:text-white font-bold py-2 px-4 rounded" %>
            <%= link_to 'Withdraw', submission, method: :delete, data: { confirm: 'Are you sure?' }, class: "ml-2 bg-white border-2 border-red-500 hover:bg-red-500 text-red-500 hover:text-white font-bold py-2 px-4 rounded" %>
          <% end %>
        </div>
      </div>
    <% end %>
    <%= will_paginate @submissions %>
  </div>
</div>

