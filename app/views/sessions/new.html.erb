<%= form_tag(sessions_path, {class: 'form-sessions'}) do |form| %>
  <img class="mb-4" src="https://getbootstrap.com/docs/4.3/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
  <h1 class="h3 mb-3 font-weight-normal">Please log in</h1>
  <p id="notice"><%= notice %></p>
  <div class="field">
    <%= label_tag :email, 'Email', class: 'sr-only' %>
    <%= text_field_tag :email, nil, class: 'form-control', placeholder: 'Email' %>
  </div>
  <br/>
  <div class="field" style="margin-bottom: 1em">
    <%= label_tag :password, 'Password', class: 'sr-only' %>
    <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Password' %>
  </div>
  <div class="actions">
    <%= submit_tag "Login", class: "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>
