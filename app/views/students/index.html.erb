<p id="notice"><%= notice %></p>

<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Institution name</th>
      <th>Bio</th>
      <th>Course name</th>
      <th>Year started course</th>
      <th>Expected graduation year</th>
      <th>Interests</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.user_id %></td>
        <td><%= student.institution_name %></td>
        <td><%= student.bio %></td>
        <td><%= student.course_name %></td>
        <td><%= student.year_started_course %></td>
        <td><%= student.expected_graduation_year %></td>
        <td><%= student.interests %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

