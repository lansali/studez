<p class="notice text-blue-500"><%= notice %></p>
<div class="bg-gray-100 flex pt-12 pl-40 pr-24">
  <div class="w-1/4  pr-4">
    <h3 class="tracking-wide mb-4">Search keywords</h3>
    <input type="text" placeholder="By name" class="shadow appearance-none border rounded w-full py-3 px-3 mb-4 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
    <h3 class="tracking-wide mb-4">Location</h3>
    <input type="text" placeholder="By location" class="shadow appearance-none border rounded w-full py-3 px-3 mb-4 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
    <h3 class="tracking-wide mb-4">Category</h3>
    <input type="text" placeholder="By categories" class="shadow appearance-none border rounded w-full py-3 px-3 mb-4 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
  </div>
  <div class="w-3/4 max-w-3xl">
    <h3 class="tracking-wide mb-4">Your Selected</h3>
    <div class="flex bg-gray-300 text-sm mb-4 p-3 rounded">
      <span class="bg-white text-sm px-2 py-1 mr-2 rounded hover:shadow-lg"><i class="icon-tags"></i> Design</span>
      <span class="bg-white text-sm px-2 py-1 mr-2 rounded hover:shadow-lg"><i class="icon-tags"></i> UI/UX</span>
      <span class="text-sm px-2 py-1 mr-2 hover:text-red-500"><i class="icon-trash"></i>Clear All</span>
    </div>
    <h3 class="tracking-wide mb-4"><%= @students.count %> Student<% if @students.count != 1 %>s<% end %> found</h3>
    <% @students.each do |student| %>
      <div class="flex bg-white shadow py-8 px-24 rounded-lg mb-4 border-l-4 border-white hover:border-green-500">
        <div class="sm:flex sm:items-center px-6 py-4">
          <img class="block mx-auto sm:mx-0 sm:flex-shrink-0 h-16 sm:h-24 rounded-full" src="https://randomuser.me/api/portraits/women/17.jpg" alt="Woman's Face">
          <div class="mt-4 sm:mt-0 sm:ml-4 text-center sm:text-left">
            <p class="text-xl leading-tight"><%= student.username %></p>
            <p class="text-sm leading-tight text-gray-600"><%= student.institution_name %></p>
            <div class="mt-4 flex">
              <%= link_to 'View', student, class: "text-green-500 hover:text-white hover:bg-green-500 border border-green-500 text-xs font-semibold rounded-full px-4 py-1 leading-normal" %>
            <% if current_user.id == student.user_id %>
                <%= link_to 'Edit', edit_student_path(student), class: "ml-2 text-blue-500 hover:text-white hover:bg-blue-500 border border-blue-500 text-xs font-semibold rounded-full px-4 py-1 leading-normal" %>
                <%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }, class: "ml-2 text-red-500 hover:text-white hover:bg-red-500 border border-red-500 text-xs font-semibold rounded-full px-4 py-1 leading-normal" %>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <%= will_paginate @students %>
  </div>
</div>
