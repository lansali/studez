  <div class="field">
    <%= form.text_area :comment, class: 'shadow appearance-none border rounded w-full py-2 px-2 text-gray-700 leading-tight focus:outline-none focus:shadow-outline', placeholder: 'Comment' %>
  </div>
  <br/>

  <div class="actions">
    <%= form.submit 'Comment', class: "mb-4 bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"%>
  </div>
<% end %>
