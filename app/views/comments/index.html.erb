<p class="notice"><%= notice %></p>
<% @comments.each do |comment| %>
  <div class="">
    <svg class="" width="100%" height="180" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Image cap"><title>Placeholder</title><rect width="100%" height="100%" fill="#868e96"></rect><text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text></svg>
    <div class="">
      <h5 class=""><%= comment.post_id %></h5>
      <p class=""><%= comment.flagged %></p>
      <p class=""><%= comment.comment %></p>
      <p class=""><%= comment.updated_at %></p>
      <%= link_to 'Show', comment, class: "" %>
      <% if current_user.id == comment.user_id %>
        <%= link_to 'Edit', edit_comment_path(comment), class: "" %>
        <%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' }, class: "" %>
      <% end %>
    </div>
  </div>
  <br/>
<% end %>
