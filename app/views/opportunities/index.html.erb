<p class="notice"><%= notice %></p>

<h1>Opportunities</h1>
<% @opportunities.each do |opportunity| %>
  <div class="">
    <svg class="" width="100%" height="180" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Image cap"><title>Placeholder</title><rect width="100%" height="100%" fill="#868e96"></rect><text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text></svg>
    <div class="">
      <h5 class=""><%= opportunity.name %></h5>
      <p class=""><%= opportunity.description %></p>
      <p class="">Deadline: <%= opportunity.deadline %></p>
      <p class=""><small class=""><%= opportunity.updated_at %></small></p>
      <%= link_to 'Show', opportunity, class: "" %>
      <% if current_user.id == opportunity.business_id %>
        <%= link_to 'Edit', edit_opportunity_path(opportunity), class: "" %>
        <%= link_to 'Destroy', opportunity, method: :delete, data: { confirm: 'Are you sure?' }, class: "" %>
      <% end %>
    </div>
  </div>
  <br/>
<% end %>
