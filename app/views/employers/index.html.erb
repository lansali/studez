<p class="notice text-blue-500"><%= notice %></p>
<div class="container bg-gray-100">
  <% @employers.each do |employer| %>
    <div class="lean_card centre">
      <div class="flex-1">
        <h5 class=""><%= employer.user_id %></h5>
        <p class=""><%= employer.title %></p>
        <p class=""><%= employer.bio %></p>
        <p class=""><%= employer.updated_at %></p>
        <%= link_to 'Show', employer, class: "" %>
        <% if current_user.id == employer.user_id %>
          <%= link_to 'Edit', edit_employer_path(employer), class: "" %>
          <%= link_to 'Destroy', employer, method: :delete, data: { confirm: 'Are you sure?' }, class: "" %>
        <% end %>
      </div>
      <svg class="justify-end rounded-lg" width="150" height="150" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Image cap"><title>Placeholder</title><rect width="100%" height="100%" fill="#868e96"></rect><text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text></svg>
    </div>
    <br/>
  <% end %>
  <div class="centre">
    <%= will_paginate @employers %>
  </div>
</div>
